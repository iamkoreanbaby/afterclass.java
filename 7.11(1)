package main;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int 홀수합 = 0;
		int 짝수합 = 0;
		int 숫자 = 1;
		while(숫자 < 1000) {
			if (숫자 % 2 == 1) {
				홀수합 += 숫자;
				숫자++;
			} else {
				짝수합 += 숫자;
				숫자++;
			}
			
		}
	System.out.println("짝수합 = "+짝수합 );
	System.out.println("홀수합 = "+홀수합 );
	}

}
