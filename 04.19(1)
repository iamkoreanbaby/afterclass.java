package a;
import java.util.Scanner;

public class Class01 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("라면을 끓여보자!!");
		
		System.out.println("가스레인지 앞에 섰다.");
		System.out.println("1.불을 킨다.");
		System.out.println("2.귀찮다. 그냥잔다.");
		
		int ㄻ = sc.nextInt();
		
		if (ㄻ==1) {
			System.out.println("가스버너가 켜집니다. 틱틱틱~");
			System.out.println("물이 끓네요 부글부글");
			System.out.println("1.스프와 면을 넣는다. 2.귀찮다. 그냥 편의점 가야지~");
			int ㄻ2 = sc.nextInt();
			
			if (ㄻ2==1) {
				System.out.println("면과 스프를 넣고 2분간 끓이다.");
				System.out.println("맛있게먹는다.");
			} else if(ㄻ2==2){
				System.out.println("불을 끄고 편의점에간다.");
			} else {
				System.out.println("1,2중에하나만 입력해야합니다.");
			}
		}
		else if(ㄻ==2) {
			System.out.println("생라면 먹방");
		} else {
			System.out.println("1,2중에하나만 입력해야합니다.");
		}		
		
	}

}
